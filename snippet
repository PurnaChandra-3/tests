from django.test import TestCase
from myapp.models import Product

class ProductModelTest(TestCase):

    @classmethod
    def setUpTestData(cls):
        # Set up a Product instance to use in the tests
        cls.product = Product.objects.create(
            name="Sample Product",
            description="A sample product description",
            price=29.99,
            stock=50
        )

    def test_read_product(self):
        # Retrieve the product from the database
        product = Product.objects.get(id=self.product.id)
        
        # Check if the retrieved product matches the created product
        self.assertEqual(product.name, "Sample Product")
        self.assertEqual(product.description, "A sample product description")
        self.assertEqual(product.price, 29.99)
        self.assertEqual(product.stock, 50)
